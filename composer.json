{
    "name": "mage/mage",
    "description": "Fix of the Magento 2 DI and Object Manager issue. Make Magento grate again!",
    "type": "magento2-module",
    "license": "GPL-3.0",
    "minimum-stability": "stable",
    "require": {
        "symfony/var-dumper": ">=6.0",
        "kint-php/kint": ">5.0",
        "illuminate/database": ">8.0",
        "psy/psysh": "^0.12.0"
    },
    "autoload": {
        "files": [
            "registration.php",
            "Mage.php"
        ],
        "psr-4": {
            "Mage\\Mage\\": ""
        }
    },
    "scripts": {
        "post-install-cmd": [
            "pwd",
            "cp ./vendor/bin/psysh ./bin/",
            "cp ./vendor/mage/mage/.psysh.php ./"
    ],
        "post-update-cmd": [
            "pwd",
            "cp ./vendor/bin/psysh ./bin/",
            "cp ./vendor/mage/mage/.psysh.php ./"
    ],
        "post-package-update": ["Mage\\Mage\\Core\\Setup::setup"],
        "post-package-install": ["Mage\\Mage\\Core\\Setup::setup"]
    }
}